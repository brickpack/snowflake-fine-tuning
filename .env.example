# Snowflake Connection Configuration
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_ROLE=ACCOUNTADMIN
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=ANALYTICS
SNOWFLAKE_SCHEMA=PUBLIC

# Authentication Method (choose one):

# Option 1: Password Authentication (default, but requires interactive MFA if enabled)
# SNOWFLAKE_PASSWORD=your_password

# Option 2: Key-Pair Authentication (recommended for automation, bypasses MFA)
# Generate key pair: openssl genrsa -out snowflake_rsa_key.pem 2048
# Extract public key: openssl rsa -in snowflake_rsa_key.pem -pubout -out snowflake_rsa_key.pub
# Add public key to Snowflake user: ALTER USER your_username SET RSA_PUBLIC_KEY='MIIBIj...'
SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/snowflake_rsa_key.p8
# Optional: passphrase if your private key is encrypted
# SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your_passphrase

# Option 3: Browser-based SSO (supports MFA, opens browser for authentication)
# SNOWFLAKE_AUTHENTICATOR=externalbrowser

# Monitoring Configuration
ALERT_EMAIL=alerts@yourcompany.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your_pagerduty_key

# Cost Thresholds (in USD)
DAILY_COST_THRESHOLD=1000
HOURLY_COST_THRESHOLD=100
WAREHOUSE_IDLE_THRESHOLD_MINUTES=30

# Performance Thresholds
QUERY_TIMEOUT_SECONDS=3600
SLOW_QUERY_THRESHOLD_SECONDS=60
SLA_P95_THRESHOLD_MS=5000

# AWS Configuration (for integrations)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
S3_BUCKET=your-snowflake-bucket

# Databricks Integration (optional)
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your_databricks_token

# Observability Platforms (optional)
NEW_RELIC_API_KEY=your_newrelic_key
TABLEAU_SERVER=https://your-tableau-server.com
TABLEAU_TOKEN=your_tableau_token

# Terraform Backend (optional)
TF_STATE_BUCKET=your-terraform-state-bucket
TF_STATE_KEY=snowflake/terraform.tfstate

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_AUTO_SCALING=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_AUTO_SUSPEND=true
DRY_RUN=false
